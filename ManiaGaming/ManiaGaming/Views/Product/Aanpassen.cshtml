@model ManiaGaming.Models.ProductDetailViewModel

@{
    ViewData["Title"] = "Aanpassen";
}

<h2>Aanpassen</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Aanpassen" asp-antiforgery="true">
            <div class="form-group">
                <label asp-for="Naam" class="control-label"></label>
                <input asp-for="Naam" class="form-control" />
                <span asp-validation-for="Naam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Omschrijving" class="control-label"></label>
                <input asp-for="Omschrijving" class="form-control" />
                <span asp-validation-for="Omschrijving" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prijs" class="control-label"></label>
                <input asp-for="Prijs" class="form-control" />
                <span asp-validation-for="Prijs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Categorie</label>
                <select asp-for="CategorieId" class="form-control">
                    @for (int i = 0; i < Model.CategorieList.Count(); i++)
                    {
                        if (i == Model.CategorieId)
                        {
                            <option selected value="@i">@Model.CategorieList[i].Naam</option>
                        }
                        else
                        {
                            <option value="@i">@Model.CategorieList[i].Naam</option>
                        }
                    }
                </select>
                <span asp-validation-for="CategorieId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Soort" class="control-label"></label>
                <select asp-for="Soort" class="form-control">
                    @for (int i = 0; i < Model.SoortList.Count(); i++)
                    {
                        if (Model.SoortList[i] == Model.Soort)
                        {
                            <option selected value="@i">@Model.SoortList[i]</option>
                        }
                        else
                        {
                            <option value="@i">@Model.SoortList[i]</option>
                        }
                    }
                </select>
                <span asp-validation-for="Soort" class="text-danger"></span>
            </div>
            <input type="submit" value="Opslaan" class="btn btn-default" />
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Terug naar lijst</a>
</div>