@model ManiaGaming.Models.WerknemerDetailViewModel

@{
    ViewData["Title"] = "Aanmaken";
}

<h2>Aanmaken</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Aanmaken" asp-antiforgery="true">
            <div class="form-group">
                <label asp-for="Naam" class="control-label"></label>
                <input asp-for="Naam" class="form-control" />
                <span asp-validation-for="Naam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AchterNaam" class="control-label"></label>
                <input asp-for="AchterNaam" class="form-control" />
                <span asp-validation-for="AchterNaam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FiliaalId" class="control-label"></label>
                <select asp-for="FiliaalId" class="form-control">
                    @for (int i = 0; i < Model.FiliaalList.Count(); i++)
                    {
                        if (Model.FiliaalList[i].Id == Model.FiliaalId)
                        {
                            <option selected value="@i">@Model.FiliaalList[i].Stad</option>
                        }
                        else
                        {
                            <option value="@i">@Model.FiliaalList[i].Stad</option>
                        }
                    }
                </select>
                <span asp-validation-for="FiliaalId" class="text-danger"></span>
            </div>
            <input type="submit" value="Opslaan" class="btn btn-default" />
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Terug naar lijst</a>
</div>