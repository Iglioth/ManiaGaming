<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ManiaGaming</title>
    <link href="https://fonts.googleapis.com/css?family=Notable&display=swap" rel="stylesheet">
    
    <link href="https://fonts.googleapis.com/css?family=Montserrat&display=swap" rel="stylesheet">
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
       <div class="header">
           <div class="inner-header">
               <div class="logo-container">
                   <a asp-area="" asp-controller="Home" asp-action="Index"><h1>Mania Gaming</h1></a>
               </div>

               <ul class="navigation">
                   <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                   <li><a asp-area="" asp-controller="Games" asp-action="Index">Games</a></li>
                   <li><a asp-area="" asp-controller="Consoles" asp-action="Index">Consoles</a></li>
                   <li><a asp-area="" asp-controller="Accesoires" asp-action="Index">Accessoires</a></li>
                   <li><a asp-area="" asp-controller="Merchandise" asp-action="Index">Merchandise</a></li>
                   <li><a asp-area="" asp-controller="Contact" asp-action="Detail">Contact</a></li> 
                   <li><a asp-area="" asp-controller="Product" asp-action="Index">Beheer</a></li>
                   @if (User.IsInRole("Klant"))
                   {
                       <li class="nav-item">
                           <a class="nav-link text-dark" asp-area="" asp-controller="Settings" asp-action="Index">Instellingen</a>
                       </li>
                   }
                   @if (User.IsInRole("Beheerder"))
                   {
                       <li class="nav-item">
                           <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Index">Beheer</a>
                       </li>
                   }
                   @if (User.Identity.IsAuthenticated)
                   {
                       <li class="nav-item">
                           <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Logout">Logout</a>
                       </li>
                   }
                   else
                   {
                       <li class="nav-item">
                           <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Index">Login</a>
                       </li>
                   }
               </ul>
           </div>           
       </div>
  



            @RenderBody()
          
        @RenderSection("Scripts", required: false)
  
    <div class="container">
        <div class="main">

        </div>
    </div>
   
    <footer>  
        <ul class="footer-navigation">
            <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
            <li><a asp-area="" asp-controller="Games" asp-action="Index">Games</a></li>
            <li><a asp-area="" asp-controller="Consoles" asp-action="Index">Consoles</a></li>
            <li><a asp-area="" asp-controller="Accesoires" asp-action="Index">Accessoires</a></li>
            <li><a asp-area="" asp-controller="Merchandise" asp-action="Index">Merchandise</a></li>
            <li><a asp-area="" asp-controller="Contact" asp-action="Index">Contact</a></li>
            <li><a asp-area="" asp-controller="Product" asp-action="Index">Beheer</a></li>
        </ul>

         <div class="copyrights">
                <p>&copy; 2019 - ManiaGaming</p>
         </div>
       
    </footer>

    

</body>
</html>
