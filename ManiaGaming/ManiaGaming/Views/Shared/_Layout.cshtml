<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ManiaGaming</title>
    <link href="https://fonts.googleapis.com/css?family=Notable&display=swap" rel="stylesheet">
    
    <link href="https://fonts.googleapis.com/css?family=Montserrat&display=swap" rel="stylesheet">
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
       <div class="header">
           <div class="inner-header">
               <div class="logo-container">
                   <h1>Mania Gaming</h1>
               </div>

               <ul class="navigation">
                   <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                   <li><a asp-area="" asp-controller="Home" asp-action="About">Games & Consoles</a></li>
                   <li><a asp-area="" asp-controller="Home" asp-action="Contact">Accessoires</a></li>
                   <li><a asp-area="" asp-controller="Home" asp-action="Contact">Merchandise</a></li>
                   <li><a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
               </ul>
           </div>           
       </div>
  



            @RenderBody()
          
        @RenderSection("Scripts", required: false)
  
    <div class="container">
        <div class="main">

        </div>
    </div>
   
    <footer>  
         <ul class="footer-navigation">
             <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
             <li><a asp-area="" asp-controller="Home" asp-action="About">Games & Consoles</a></li>
             <li><a asp-area="" asp-controller="Home" asp-action="Contact">Accessoires</a></li>
             <li><a asp-area="" asp-controller="Home" asp-action="Contact">Merchandise</a></li>
             <li><a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
         </ul>

         <div class="copyrights">
                <p>&copy; 2019 - ManiaGaming</p>
         </div>
       
    </footer>

    

</body>
</html>
