
<!DOCTYPE html>
<html>

<head>
    @model ManiaGaming.Models.ProductViewModel;
    @{ ViewData["Title"] = "Index"; }
    <link href="https://fonts.googleapis.com/css?family=Permanent+Marker&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Anton&display=swap" rel="stylesheet">
    <title></title>

</head>

<body>



    <div class="container">
        <div id="carouselGames" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                
                @for (int i = 0; i < Model.ProductDetailViewModels.Count; i++)
                {
                    if (i == 0)
                    {
                        Model.carousel = 0;
                    }
                    if (Model.ProductDetailViewModels[i].Actief == true)
                    {

                        if (Model.carousel == 0)
                        {
                            <div class="carousel-item active">
                                <a href='@Url.Action("Detail", "Games", new { id = Model.ProductDetailViewModels[i].Id })'>

                                    <img style="float:right; width:50px; height:700px" src="~/images/@Model.ProductDetailViewModels[i].ImagePath" class="d-block w-100" alt="Paris">
                                    <div class="carousel-caption d-none d-md-block">
                                        <p> @Html.DisplayFor(modelItem => Model.ProductDetailViewModels[i].Naam) </p>
                                        <p>@Html.DisplayFor(modelItem => Model.ProductDetailViewModels[i].Prijs)</p>
                                    </div>

                                </a>
                            </div>
                        }
                        else if (Model.carousel >= 1)
                        {
                            <div class="carousel-item">
                                <a href='@Url.Action("Detail", "Games", new { id = Model.ProductDetailViewModels[i].Id })'>

                                    <img style="float:right; width:50px; height:700px" src="~/images/@Model.ProductDetailViewModels[i].ImagePath" class="d-block w-100" alt="Paris">
                                    <div class="carousel-caption d-none d-md-block">
                                        <p> @Html.DisplayFor(modelItem => Model.ProductDetailViewModels[i].Naam) </p>
                                        <p>@Html.DisplayFor(modelItem => Model.ProductDetailViewModels[i].Prijs)</p>
                                    </div>
                                </a>
                            </div>
                        }
                    }
                    Model.carousel++;
                    if (Model.ProductDetailViewModels[i].Actief == false)
                    {
                        Model.carousel--;
                    }
                }

            </div>
            <a class="carousel-control-prev" href="#carouselGames" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselGames" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>

            <!---<script>
                $("#carouselGames").carousel(
                    {
                        interval: 2000
                    });
            </script>-->

        </div>
    </div>

    <div class="container-product">
        @foreach (ProductDetailViewModel item in Model.ProductDetailViewModels)
        {
            if (item.Actief == true)
            {
                <div>
                    <a href='@Url.Action("Detail", "Games", new { id = item.Id })'>
                        <div class="containers-products">
                            <img style="float:right; max-width:100%; max-height:100%" src="~/images/@item.ImagePath" alt="Paris">
                            <p class="product-font"> @Html.DisplayFor(modelItem => item.Naam) </p>
                            <p>@Html.DisplayFor(modelItem => item.Prijs),-</p>
                        </div>
                    </a>

                </div>
            }
        }
    </div>
</body>

</html>

