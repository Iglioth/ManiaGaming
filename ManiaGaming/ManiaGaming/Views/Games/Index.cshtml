
<!DOCTYPE html>
<html>

<head>
    @model ManiaGaming.Models.ProductViewModel;
    @{
        ViewData["Title"] = "Index";
    }
    <link href="https://fonts.googleapis.com/css?family=Permanent+Marker&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Anton&display=swap" rel="stylesheet">
    <title></title>


</head>


<body>



    <div class="container-product">
        @foreach (ProductDetailViewModel item in Model.ProductDetailViewModels)
        {
            if (item.Actief == true)
            {
        <div>
            <a href='@Html.ActionLink("Detail", "Detail", new { id = item.ProductId })'>
                <div class="containers-products">


                    <img src="~/images/Games.png" alt="Paris">

                    <p class="product-font"> @Html.DisplayFor(modelItem => item.Naam)  </p><p>@Html.DisplayFor(modelItem => item.Prijs),-</p>

                </div>
            </a>

        </div>
            }
        }
    </div>
    
 
</body>

</html>





