@model ManiaGaming.Models.OrderDetailViewModel

@{
    ViewData["Title"] = "Aanmaken";
}




<div class="row container">
    <div class="col-md-4">
        <h4>Aanmaken</h4>
        <hr />
        <form asp-action="Aanmaken">
            <div class="form-group">
                <label>Product</label>
                <select asp-for="ProductId" class="form-control border-dark">
                    @for (int i = 1; i - 1 < Model.Producten.Count(); i++)
                    {
                        <option value="@i">@Model.Producten[i - 1].Naam</option>
                    }
                </select>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Aantal" class="control-label"></label>
                <input asp-for="Aantal" class="form-control border-dark" />
                <span asp-validation-for="Aantal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Ontvanger</label>
                <select asp-for="OntvangerID" class="form-control border-dark">
                    @for (int i = 1; i - 1 < Model.Filialen.Count(); i++)
                    {
                        <option value="@i">@Model.Filialen[i - 1].Stad</option>
                    }
                </select>
                <span asp-validation-for="OntvangerID" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input type="submit" value="create" class="btn btn-outline-dark my-2 my-sm-0" />

                <button class="btn btn-outline-dark my-2 my-sm-0"><a asp-action="Index">Back to List</a></button>


            </div>
        </form>
        
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
