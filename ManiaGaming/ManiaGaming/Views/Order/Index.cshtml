<!DOCTYPE html>
@model ManiaGaming.Models.OrderViewModel;
@{
    ViewData["Title"] = "Index";
}
<head>

    <link href="https://fonts.googleapis.com/css?family=Permanent+Marker&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Anton&display=swap" rel="stylesheet">
    <title></title>


</head>

<body>
    <h2>Index</h2>

    <p>
        <a asp-action="Aanmaken">Create New</a>
    </p>
    <table class="table table-striped table-hover" id="productTable" style="width:100%;">
        <thead>
            <tr>
                <th>OrderNummer</th>
                <th>Datum</th>
                <th>Acties</th>
                <th>Aantal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (OrderDetailViewModel item in Model.Orders)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.Datum)</td>
                    <td>
                        @Html.ActionLink("Detail", "Detail", new { id = item.Id }) |
                        @Html.ActionLink("Aanpassen", "Aanpassen", new { id = item.Id }) |
                        @if (item.Ontvangen == false)
                        {
                            @Html.ActionLink("Ontvangen", "Ontvangen", new { id = item.Id })
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
    
</body>