<!DOCTYPE html>
@model ManiaGaming.Models.OrderViewModel;
@{
    ViewData["Title"] = "Index";
}
<head>

    <link href="https://fonts.googleapis.com/css?family=Permanent+Marker&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Anton&display=swap" rel="stylesheet">
    <title></title>


</head>

<body>
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-5">  <h2 style="margin-top:20px;">Te ontvangen order verzoeken</h2></div>
        <div class="col-md-3"></div>
    </div>

    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-7"><p><a asp-action="Aanmaken" style="margin-left:22px;">Create New</a></p></div>
        <div class="col-md-1"></div>
        <div class="col-md-3"><a asp-action="OrdersVerzenden" style="margin-left: 49px;">Te verzenden orders </a></div>
    </div>
   

    <div class="table-products" style="margin-bottom:500px;">
        <table class="content-table">
            <thead>
                <tr>
                    <th>OrderNummer</th>
                    <th>Datum</th>
                    <th>Acties</th>
                    <th>Aantal</th>
                </tr>
            </thead>

            @foreach (OrderDetailViewModel item in Model.Orders)
            {
                <tbody>
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.Datum)</td>
                        <td>
                            @Html.ActionLink("Detail", "Detail", new { id = item.Id }) |
                            @Html.ActionLink("Aanpassen", "Aanpassen", new { id = item.Id }) |
                            @if (item.Ontvangen == false)
                            {
                                @Html.ActionLink("Ontvangen", "Ontvangen", new { id = item.Id })
                            }
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.Aantal)</td>
                    </tr>
                </tbody>
            }

        </table>
    </div>

</body>